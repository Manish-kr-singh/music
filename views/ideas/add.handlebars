<div class="card card-body">
  <h3> Artist </h3>
  <form action="/ideas" method="post">
    <div class="form-group">
      <label for="title">Name</label>
      <input type="text" class="form-control" name="name" required>
    </div>
    <div class="form-group">
      <label for="title">Years Active</label>
      <input type="text" class="form-control" name="years_active" required>
    </div>
    <div class="form-group">
      <label for="details">Description</label>
      <textarea class="form-control" name="description" required></textarea>
    </div>
    <div class="form-group">
      <label for="details">Album</label>
      <textarea class="form-control" name="album" required></textarea>
    </div>
    <div class="form-group">
      <label for="details">Release Date</label>
      <textarea class="form-control" name="releaseDate" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
